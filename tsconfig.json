{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "strict": true,
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "./generators"
  },
  "include": ["src", "types/*.d.ts", "node_modules/config", "src"],
  "exclude": ["node_modules", "src/app/templates/*"]
}
